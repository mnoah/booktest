@model booktest.Models.GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/Content/Style.css"/>
    <title>RsvpForm</title>
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>Welcome to Grant Chirpus' Code Dojo</h4></div>
        <p class="text-center">Please enter your info to register</p>
        <div class="panel-body">
    </div>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        <div class="form-group">
            <label>Your name:</label>
            @Html.TextBoxFor(n => n.Name, new  { @class = "form-control"})
            </div>
            <div class="form-group">
                <label>Your email:</label>
                @Html.TextBoxFor(n => n.Email, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Your phone:</label>
                @Html.TextBoxFor(n => n.Phone, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Do you live in Detroit:</label>
                @Html.DropDownListFor(n => n.Live, new[]
           {new SelectListItem() {Text = "Yes", Value = bool.TrueString},
           new SelectListItem() {Text = "No", Value = bool.FalseString} }, "Choosen an option",
           new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>gender:</label>
                <br/>
              Male  @Html.RadioButtonFor(n => n.Gender, new { @class = "form-control" })
                <br/>
               Femal @Html.RadioButtonFor(n => n.Gender, new { @class = "form-control" })


            </div>

            <div class="form-group">
                <label>What kind of pet do you have?</label>
                <br/>
                 <div  class="checkBoxes">
               
                     Dog @Html.CheckBoxFor(n => n.Pet, new { @class = "form-control" })
                     Cat @Html.CheckBoxFor(n => n.Pet, new { @class = "form-control" })
                     Dinosaur @Html.CheckBoxFor(n => n.Pet, new { @class = "form-control" })
                                          Dinosaur @Html.CheckBoxFor(n => n.Pet, new { @class = "form-control" })

                     </div>
                   


                
            </div>

                <div class="text-center">
                    <input class="btn btn-success" type="submit" value="Submit" />
                </div>







                }
            </div>




</body>
</html>
